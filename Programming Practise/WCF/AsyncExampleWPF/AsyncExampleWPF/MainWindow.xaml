<Window x:Class="AsyncExampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="554" Width="633">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="328,235,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="startButton_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.39"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="resultsTextBox" HorizontalAlignment="Left" Height="500" Margin="10,10,0,-191" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" FontFamily="Lucida Console" FontSize="20"/>

    </Grid>
</Window>
